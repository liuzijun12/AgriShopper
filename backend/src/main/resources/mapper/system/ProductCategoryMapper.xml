<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youlai.boot.system.mapper.ProductCategoryMapper">

    <!-- 获取分类分页列表 -->
    <select id="getProductCategoryPage" resultType="com.youlai.boot.system.model.vo.ProductCategoryVO">
        SELECT
        id,
        name,
        icon,
        parent_id,
        create_time,
        update_time
        FROM
        product_category
        <where>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 获取所有分类列表 -->
    <select id="getAllCategories" resultType="com.youlai.boot.system.model.vo.ProductCategoryVO">
        SELECT
        id,
        name,
        icon,
        parent_id,
        create_time,
        update_time
        FROM
        product_category
        ORDER BY parent_id ASC, create_time ASC
    </select>

</mapper>
