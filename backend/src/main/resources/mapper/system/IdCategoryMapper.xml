<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youlai.boot.system.mapper.IdCategoryMapper">

    <!-- 获取分类关联分页列表 -->
    <select id="getIdCategoryPage" resultType="com.youlai.boot.system.model.vo.IdCategoryVO">
        SELECT
        id,
        product_id,
        category_id
        FROM
        id_category
        <where>
        </where>
    </select>

    <!-- 批量插入商品分类关联 -->
    <insert id="batchInsert">
        INSERT INTO id_category (product_id, category_id)
        VALUES
        <foreach collection="categoryIds" item="categoryId" separator=",">
            (#{productId}, #{categoryId})
        </foreach>
    </insert>

    <!-- 根据商品ID删除关联 -->
    <delete id="deleteByProductId">
        DELETE FROM id_category WHERE product_id = #{productId}
    </delete>

    <!-- 根据分类ID删除关联 -->
    <delete id="deleteByCategoryId">
        DELETE FROM id_category WHERE category_id = #{categoryId}
    </delete>

    <!-- 根据商品ID获取分类ID列表 -->
    <select id="getCategoryIdsByProductId" resultType="java.lang.Integer">
        SELECT category_id FROM id_category WHERE product_id = #{productId}
    </select>

    <!-- 根据分类ID获取商品ID列表 -->
    <select id="getProductIdsByCategoryId" resultType="java.lang.Integer">
        SELECT product_id FROM id_category WHERE category_id = #{categoryId}
    </select>

</mapper>
